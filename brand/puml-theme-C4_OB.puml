' C4_OB Theme - OB Brand Colors
' Usage: !theme C4_OB from MSSD/brand

!$THEME = "C4_OB"

' =================================
' Brand Colors
' =================================

!$OB_COLOR_ORANGE = #ff7900
!$OB_COLOR_BLUE = #4bb4e6
!$OB_COLOR_GREEN = #50be87
!$OB_COLOR_PINK = #ff88d8
!$OB_COLOR_VIOLET = #a885d8
!$OB_COLOR_YELLOW = #ffd200
!$OB_COLOR_GREY = #8f8f8f
!$OB_COLOR_BLACK = #000000
!$OB_COLOR_WHITE = #ffffff

!$OB_COLOR_ORANGE_LIGHT = #ffe4cc
!$OB_COLOR_BLUE_LIGHT = #dbf0fa
!$OB_COLOR_GREEN_LIGHT = #dcf2e7
!$OB_COLOR_PINK_LIGHT = #ffb4e6
!$OB_COLOR_VIOLET_LIGHT = #eee7f7
!$OB_COLOR_YELLOW_LIGHT = #fff6cc
!$OB_COLOR_GREY_LIGHT = #e9e9e9
!$OB_COLOR_BLACK_LIGHT = #7f7f7f
!$OB_COLOR_WHITE_LIGHT = #f2f2f2

' =================================
' C4 Element Colors
' =================================

' Person Colors
!$PERSON_BG_COLOR = $OB_COLOR_BLUE
!$PERSON_BORDER_COLOR = $OB_COLOR_BLUE
!$PERSON_FONT_COLOR = $OB_COLOR_WHITE

' External Person Colors
!$EXTERNAL_PERSON_BG_COLOR = $OB_COLOR_GREY
!$EXTERNAL_PERSON_BORDER_COLOR = $OB_COLOR_GREY
!$EXTERNAL_PERSON_FONT_COLOR = $OB_COLOR_WHITE

' System Colors
!$SYSTEM_BG_COLOR = $OB_COLOR_GREEN
!$SYSTEM_BORDER_COLOR = $OB_COLOR_GREEN
!$SYSTEM_FONT_COLOR = $OB_COLOR_WHITE

' External System Colors
!$EXTERNAL_SYSTEM_BG_COLOR = $OB_COLOR_ORANGE
!$EXTERNAL_SYSTEM_BORDER_COLOR = $OB_COLOR_ORANGE
!$EXTERNAL_SYSTEM_FONT_COLOR = $OB_COLOR_WHITE

' Container Colors
!$CONTAINER_BG_COLOR = $OB_COLOR_VIOLET
!$CONTAINER_BORDER_COLOR = $OB_COLOR_VIOLET
!$CONTAINER_FONT_COLOR = $OB_COLOR_WHITE

' External Container Colors
!$EXTERNAL_CONTAINER_BG_COLOR = $OB_COLOR_PINK
!$EXTERNAL_CONTAINER_BORDER_COLOR = $OB_COLOR_PINK_LIGHT
!$EXTERNAL_CONTAINER_FONT_COLOR = $OB_COLOR_BLACK

' Component Colors
!$COMPONENT_BG_COLOR = $OB_COLOR_YELLOW
!$COMPONENT_BORDER_COLOR = $OB_COLOR_YELLOW
!$COMPONENT_FONT_COLOR = $OB_COLOR_BLACK

' External Component Colors
!$EXTERNAL_COMPONENT_BG_COLOR = $OB_COLOR_GREY_LIGHT
!$EXTERNAL_COMPONENT_BORDER_COLOR = $OB_COLOR_GREY
!$EXTERNAL_COMPONENT_FONT_COLOR = $OB_COLOR_BLACK

' =================================
' Relationship Colors
' =================================
!$ARROW_COLOR = $OB_COLOR_BLACK
!$ARROW_FONT_COLOR = $OB_COLOR_BLACK

' =================================
' Legend and Boundary Colors
' =================================
!$LEGEND_TITLE_COLOR = $OB_COLOR_BLACK
!$LEGEND_FONT_COLOR = $OB_COLOR_BLACK

!$BOUNDARY_BG_COLOR = $OB_COLOR_WHITE_LIGHT
!$BOUNDARY_BORDER_COLOR = $OB_COLOR_GREY
!$BOUNDARY_FONT_COLOR = $OB_COLOR_BLACK

' =================================
' Specialized Element Colors
' =================================

' Database Colors
!$DATABASE_BG_COLOR = $OB_COLOR_BLUE_LIGHT
!$DATABASE_BORDER_COLOR = $OB_COLOR_BLUE
!$DATABASE_FONT_COLOR = $OB_COLOR_BLACK

' Queue Colors
!$QUEUE_BG_COLOR = $OB_COLOR_ORANGE_LIGHT
!$QUEUE_BORDER_COLOR = $OB_COLOR_ORANGE
!$QUEUE_FONT_COLOR = $OB_COLOR_BLACK

' =================================
' Global Skin Parameters
' =================================
skinparam backgroundColor $OB_COLOR_WHITE_LIGHT
skinparam defaultFontName "Segoe UI, Arial, sans-serif"
skinparam defaultFontSize 11
skinparam defaultFontColor $OB_COLOR_BLACK
skinparam shadowing false
skinparam roundCorner 8

' Title styling
skinparam title {
    FontSize 16
    FontColor $OB_COLOR_BLACK
    FontStyle bold
}

' Legend styling
skinparam legend {
    BackgroundColor $OB_COLOR_WHITE
    BorderColor $OB_COLOR_GREY
    FontColor $OB_COLOR_BLACK
    FontSize 10
}

' Note styling
skinparam note {
    BackgroundColor $OB_COLOR_YELLOW_LIGHT
    BorderColor $OB_COLOR_YELLOW
    FontColor $OB_COLOR_BLACK
    FontSize 10
}

' =================================
' C4 Specific Overrides
' =================================

' Override default C4 colors if C4 is loaded
!if %variable_exists("C4_CONTEXT")
    UpdateElementStyle("person", $bgColor=$PERSON_BG_COLOR, $fontColor=$PERSON_FONT_COLOR, $borderColor=$PERSON_BORDER_COLOR)
    UpdateElementStyle("external_person", $bgColor=$EXTERNAL_PERSON_BG_COLOR, $fontColor=$EXTERNAL_PERSON_FONT_COLOR, $borderColor=$EXTERNAL_PERSON_BORDER_COLOR)
    UpdateElementStyle("system", $bgColor=$SYSTEM_BG_COLOR, $fontColor=$SYSTEM_FONT_COLOR, $borderColor=$SYSTEM_BORDER_COLOR)
    UpdateElementStyle("external_system", $bgColor=$EXTERNAL_SYSTEM_BG_COLOR, $fontColor=$EXTERNAL_SYSTEM_FONT_COLOR, $borderColor=$EXTERNAL_SYSTEM_BORDER_COLOR)
    UpdateElementStyle("container", $bgColor=$CONTAINER_BG_COLOR, $fontColor=$CONTAINER_FONT_COLOR, $borderColor=$CONTAINER_BORDER_COLOR)
    UpdateElementStyle("external_container", $bgColor=$EXTERNAL_CONTAINER_BG_COLOR, $fontColor=$EXTERNAL_CONTAINER_FONT_COLOR, $borderColor=$EXTERNAL_CONTAINER_BORDER_COLOR)
    UpdateElementStyle("component", $bgColor=$COMPONENT_BG_COLOR, $fontColor=$COMPONENT_FONT_COLOR, $borderColor=$COMPONENT_BORDER_COLOR)
    UpdateElementStyle("external_component", $bgColor=$EXTERNAL_COMPONENT_BG_COLOR, $fontColor=$EXTERNAL_COMPONENT_FONT_COLOR, $borderColor=$EXTERNAL_COMPONENT_BORDER_COLOR)
    
    UpdateRelStyle($textColor=$ARROW_FONT_COLOR, $lineColor=$ARROW_COLOR)
!endif
